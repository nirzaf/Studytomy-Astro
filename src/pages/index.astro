---

<Layout title="Home">
  <main>
    <!-- Hero Section -->
    <section class="pt-24 pb-12 bg-gray-light">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl font-montserrat font-bold text-secondary mb-6">
            Expert Tutoring for Global Success
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Connect with qualified tutors worldwide and achieve your academic goals
          </p>
          <div class="flex justify-center gap-4">
            <a
              href="/contact"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary/90 relative overflow-hidden group"
            >
              <span class="relative z-10">Book Free Trial</span>
              <div class="absolute inset-0 w-2 bg-white/20 skew-x-[45deg] group-hover:animate-shine"></div>
            </a>
            <a
              href="/exam-boards"
              class="inline-flex items-center px-6 py-3 border border-primary text-base font-medium rounded-md text-primary bg-white hover:bg-gray-50"
            >
              View Exam Boards
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Subjects Section -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Our Subjects
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
          {subjects.map(subject => <SubjectCard {...subject} />)}
        </div>
      </div>
    </section>

    <!-- Why Us Section -->
    <section class="py-12 bg-gray-light">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Why Choose Us?
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {whyUsFeatures.map(feature => <WhyUsCard {...feature} />)}
        </div>
      </div>
    </section>

    <!-- Pay As You Go Section -->
    <PayAsYouGo />

    <!-- Exam Boards Carousel -->
    <ExamBoardsCarousel />

    <!-- Testimonials Section -->
    <section class="py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-montserrat font-bold text-center text-secondary mb-12">
          Student Success Stories
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          {testimonials.map(testimonial => <TestimonialCard {...testimonial} />)}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes shine {
    from {
      transform: translateX(-100%) skew(-45deg);
    }
    to {
      transform: translateX(200%) skew(-45deg);
    }
  }

  .animate-shine {
    animation: shine 1s infinite;
  }
</style>