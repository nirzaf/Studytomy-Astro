---
import Layout from '../layouts/Layout.astro';

const contactInfo = [
  {
    icon: 'map-pin',
    title: 'Address',
    content: ['2202/4 Kurringal Court, Fannie Bay,', 'NT, 0820, Australia'],
    link: 'https://goo.gl/maps/qEdoHvbSTUyjwjXs9'
  },
  {
    icon: 'phone',
    title: 'Phone',
    content: ['+61461367702'],
    link: 'tel:+61461367702'
  },
  {
    icon: 'mail',
    title: 'Email',
    content: ['info@learnglobal.com'],
    link: 'mailto:info@learnglobal.com'
  }
];
---

<Layout title="Contact Us">
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 bg-gray-light">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl font-montserrat font-bold text-secondary mb-6">
            Contact Us
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Get in touch with us for any questions about our tutoring services
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form and Info Section -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-montserrat font-bold text-secondary mb-6">Send us a message</h2>
            <form action="https://formspree.io/f/xdornkeg" method="POST" class="space-y-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  />
                </div>
              </div>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                  />
                </div>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary focus:border-primary"
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full px-6 py-3 bg-primary text-white font-medium rounded-md hover:bg-primary/90 transition-colors relative overflow-hidden group"
              >
                <span class="relative z-10">Send Message</span>
                <div class="absolute inset-0 w-2 bg-white/20 skew-x-[45deg] group-hover:animate-shine"></div>
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h2 class="text-2xl font-montserrat font-bold text-secondary mb-6">Contact Information</h2>
              <div class="space-y-6">
                {contactInfo.map(info => (
                  <div class="flex items-start">
                    <div class="flex-shrink-0">
                      <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        {info.icon === 'map-pin' && (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        )}
                        {info.icon === 'phone' && (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                        )}
                        {info.icon === 'mail' && (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        )}
                      </svg>
                    </div>
                    <div class="ml-4">
                      <h3 class="text-lg font-semibold text-secondary">{info.title}</h3>
                      {info.content.map(line => (
                        <a href={info.link} class="text-gray-600 hover:text-primary block">
                          {line}
                        </a>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>

            <!-- Map -->
            <div class="bg-white p-8 rounded-lg shadow-md">
              <h2 class="text-2xl font-montserrat font-bold text-secondary mb-6">Location</h2>
              <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden">
                <iframe
                  src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15588.37219289967!2d130.8811128!3d-12.3766992!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2cc095a4b9fc0ded%3A0x3ec30b54c649d96!2sStudytomy!5e0!3m2!1sen!2sqa!4v1687603317244!5m2!1sen!2sqa"
                  width="100%"
                  height="100%"
                  style="border:0;"
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                  class="rounded-lg"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @keyframes shine {
    from {
      transform: translateX(-100%) skew(-45deg);
    }
    to {
      transform: translateX(200%) skew(-45deg);
    }
  }

  .animate-shine {
    animation: shine 1s infinite;
  }

  /* Custom aspect ratio for the map */
  .aspect-w-16 {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
  }

  .aspect-w-16 iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>