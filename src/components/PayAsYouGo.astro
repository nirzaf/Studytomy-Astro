<section class="py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-[#003049] rounded-lg shadow-xl p-8 text-center text-white">
      <h4 class="text-2xl font-montserrat font-bold mb-4">
        Pay-as-you-Go Clear Your Doubts
      </h4>
      <p class="mb-6 text-lg">
        Got doubts and not a student of ours? No worries! Contact us for an exclusive doubt clearing session
      </p>
      <a 
        href="/contact" 
        class="inline-block px-6 py-3 text-white font-medium rounded-md bg-primary relative overflow-hidden group"
      >
        <span class="relative z-10">Contact Us</span>
        <div class="absolute inset-0 w-2 bg-white/20 skew-x-[45deg] group-hover:animate-shine"></div>
      </a>
    </div>
  </div>
</section>

<style>
  @keyframes shine {
    from {
      transform: translateX(-100%) skew(-45deg);
    }
    to {
      transform: translateX(200%) skew(-45deg);
    }
  }

  .animate-shine {
    animation: shine 1s infinite;
  }
</style>